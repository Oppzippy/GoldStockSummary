<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Frame name="GoldStockSummaryClipboardFrame" toplevel="true" enableMouse="true" movable="true" parent="UIParent" inherits="TranslucentFrameTemplate" frameStrata="TOOLTIP" hidden="true">
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Size x="500" y="400" />
		<Scripts>
			<OnShow>
				self.scrollFrame.editBox:SetFocus()
			</OnShow>
		</Scripts>
		<Frames>
			<Button parentKey="closeButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="5" y="4" />
				</Anchors>
			</Button>
			<ScrollFrame parentKey="scrollFrame" inherits="MinimalScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="20" y="-20" />
					<Anchor point="BOTTOMRIGHT" x="-40" y="20" />
				</Anchors>
				<ScrollChild>
					<EditBox parentKey="editBox" multiLine="true" autoFocus="false">
						<Size x="420" y="1" />
						<Scripts>
							<OnEscapePressed>
								GoldStockSummaryClipboardFrame:Hide()
							</OnEscapePressed>
							<OnEditFocusLost>
								GoldStockSummaryClipboardFrame:Hide()
							</OnEditFocusLost>
						</Scripts>
						<Anchors>
							<Anchor point="TOPLEFT" />
						</Anchors>
						<FontString inherits="GameFontHighlight" />
					</EditBox>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
	</Frame>
</Ui>
